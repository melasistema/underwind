{
    "name": "melasistema/underwind",
    "description": "A modern, utility-first WordPress starter theme.",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "WordPress",
        "Theme",
        "Tailwind",
        "Starter Theme",
        "Framework"
    ],
    "homepage": "https://github.com/melasistema/underwind",
    "authors": [
        {
            "name": "Luca Visciola",
            "homepage": "https://github.com/melasistema"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "autoload": {
        "psr-4": {
            "Underwind\\": "app/"
        }
    },
            "minimum-stability": "dev",
            "prefer-stable": true,
            "scripts": {
                "post-install-cmd": [
                    "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
                ],
                "post-update-cmd": [
                    "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
                ]
            },
            "require-dev": {
                "squizlabs/php_codesniffer": "^3.9",
                "wp-coding-standards/wpcs": "^2.3"
            }
    }
